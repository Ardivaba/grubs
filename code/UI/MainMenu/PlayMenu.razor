@namespace Grubs.UI

<root>
    <div style="width: 25%; flex-direction: column;">
        <div class="players">
            <label class="title">Players</label>
            @foreach (var client in Game.Clients)
            {
                <div class="player">
                    <img src="avatar:@client.SteamId" class="avatar" />
                    <label class="name">@client.Name</label>
                </div>
            }
        </div>
        <div style="height: 20px;" />
        <button class="button">START</button>
    </div>
</root>

@code {
    protected override int BuildHash()
    {
        return HashCode.Combine(Game.Clients.HashCombine(c => c.SteamId));
    }
}

