@using Sandbox;
@using Sandbox.UI;
@namespace Grubs.UI
@inherits Panel
@attribute [StyleSheet]

<root>
    <section class="header">
        <image src="textures/ui/grub.png" />
        <label style="font-size: 108px;">GRUBS</label>
    </section>
    <section class="buttons">
        <button class="menu-button" onclick="@Game.Menu.HideMenu">Resume</button>
        <button class="menu-button" onclick="@Game.Menu.Close">Quit</button>
    </section>
</root>

@code {
    public InGameMenu()
    {
        BindClass("hidden", () => Game.Menu.IsLoading);
    }
}