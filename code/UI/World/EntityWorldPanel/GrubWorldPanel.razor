@inherits EntityWorldPanel
@namespace Grubs.UI

@if (Entity is not Grub grub || !grub.IsValid() || Game.LocalPawn is not Grubs.Player player)
{
    return;
}

<root style="color: @grub.Player.Color.Hex">
    @{
        // We remap the camera distance to values between 0.0f and 1f.
        var opacity = (player.GrubsCamera.Distance - 128f) / (350f - 128f) * (0.5f - 1f) + 1f;
        <img src="avatar:@grub.Player.SteamId" style="opacity: @opacity;" />
    }
    <text>@grub.Name</text>
    <text>@((int)grub.Health)</text>
</root>

@code {
    public GrubWorldPanel(Grub grub) : base(grub) { }

    protected override int BuildHash()
    {
        var grub = Entity as Grub;
        return HashCode.Combine(grub?.Name, grub?.Health, (Game.LocalPawn as Grubs.Player)?.GrubsCamera?.Distance);
    }
}

<style>
    GrubWorldPanel {
        align-items: center;
        justify-content: center;
        flex-direction: column;

        label,
        img {
            font-size: 135px;
            font-family: Londrina Solid;
            background-color: rgba(black, 0.1);
            border: 2px solid rgba(black, 0.1);
            border-radius: 4px;
            padding: 0px 20px;
            text-shadow: 2px 2px 0px black;
            text-stroke: 4px black;
            margin: 2px 0;
            max-width: 500px;
            text-overflow: ellipsis;
            white-space: nowrap;
            text-align: center;
        }

        img {
            opacity: 0.5;
            aspect-ratio: 1;
        }
    }
</style>
